{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2020"
    ],
    "moduleResolution": "node",
    "types": [
      "chrome"
    ]
  },
  "include": [
    "src/**/*"
  ]
}